@{
    ViewData["Title"] = "Home Page";
}

<div class="header-container">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("AllCategoriesForMain", new { cegvm = Model })

            <div class="col-md-10">
                <div class="input-group" style="margin-top:5px;margin-bottom:5px;">
                    <input type="text" class="form-control" placeholder="Найти...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Поиск</button>
                    </span>
                </div>

                <div class="banners" style="width:100%;">
                    <table style="width:100%;">
                        <tr>
                            <td><img src="~/images/banner1.svg"/></td>
                            <td><img src="~/images/banner1.svg"/></td>
                            <td><img src="~/images/banner1.svg"/></td>
                        </tr>
                    </table>
                    @*<div style="width:25%;border:1px solid black;">
                        <img src="~/images/banner1.svg" />
                    </div>
                    <div style="width:25%;border:1px solid black;float">
                        <img src="~/images/banner1.svg" />
                    </div>
                    <div style="width:25%;border:1px solid black;">
                        <img src="~/images/banner1.svg" />
                    </div>
                    <div style="width:25%;border:1px solid black;">
                        <img src="~/images/banner1.svg" />
                    </div>*@
                    
                    @*<div style="float:left;width:25%;"><img style="height:200px;width:190px;" src="~/images/banner1.svg" /></div>
                    <div style="float:left;width:25%;"><img style="height:200px;width:190px;" src="~/images/banner1.svg" /></div>
                    <div style="float:left;width:25%;"><img style="height:200px;width:190px;" src="~/images/banner1.svg" /></div>*@                    
                </div>

                <div class="content">
                    <div class="container">
                        
                        @foreach (var avm in ViewBag.ArticlesVM)
                        {
                            <a>
                                <div class="col-mg-10" style="width:250px;">
                                    <h2>@avm.Title</h2>

                                    <div>
                                        [@if (@avm.Category.ParentCategory != null)
                                        {
                                            @avm.Category.ParentCategory.Title@avm.Category.Title;
                                        }
                                        else
                                        {
                                            @avm.Category.Title;
                                        }]
                                    </div>
                                    <div>@avm.UpdateTime</div>
                                    <div>@avm.Description</div>
                                    <div>
                                        <img width="50" src='@avm.MainImageInBase64' />
                                    </div>

                                </div>
                            </a>
                        }
                        
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>






