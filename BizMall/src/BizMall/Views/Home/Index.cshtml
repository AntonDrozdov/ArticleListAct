@{
    ViewData["Title"] = "Home Page";
}




<div class="container">
    <div class="row">
        <div class="row row-offcanvas row-offcanvas-right">
            @*<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">*@
            <div class="col-md-3">
                @await Component.InvokeAsync("AllCategoriesForMain", new { cegvm = Model })
            </div>

            <div class="col-md-9">
                <div class="row">
                    <div class="col-xs-12 ">
                        <div class="input-group" style="margin-top:5px;margin-bottom:5px;">
                            <input type="text" class="form-control" placeholder="Найти...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Поиск</button>
                            </span>
                        </div>
                    </div>
                </div>
                @{
                    int i = 0;
                }
                <div class="col-xs-12 col-sm-4">
                    @for (int j = 0; j < 3; j++, i++)
                    {
                        @await Component.InvokeAsync("ArticleTile", new { avm = ViewBag.ArticlesVM[i] })
                    }
                </div>
                <div class="col-xs-12 col-sm-4">
                    @for (int j = 0; j < 3; j++, i++)
                    {
                        @await Component.InvokeAsync("ArticleTile", new { avm = ViewBag.ArticlesVM[i] })
                    }
                </div>
                <div class="col-xs-12 col-sm-4">
                    @for (int j = 0; j < 3; j++, i++)
                    {
                        @await Component.InvokeAsync("ArticleTile", new { avm = ViewBag.ArticlesVM[i] })
                    }
                </div>
            </div>
        </div>
    </div>
</div>

