@model ArticleList.Models.CommonModels.PagingInfo

<nav aria-label="...">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <!--ЕСЛИ ЛИСТАЕМ ПО КАТЕГОРИЯМ-->
            @if (Model.CategoryEnTitleForLink != null)
            {
                @if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        <a href = @String.Format("{0}/{1}{2}", Model.CategoryEnTitleForLink, "Page", i) class="page-link">
                            <span class="page-link">
                                @i
                            </span>
                        </a>
                    </li>
                }
                else 
                {
                    <li class="page-item">
                        <a href = @String.Format("{0}/{1}{2}", Model.CategoryEnTitleForLink, "Page", i) class="page-link">
                            @i
                        </a>
                    </li>
                }
            }
            else 
            {
                @if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        @*<a asp-controller="Home" asp-action="IndexCat" asp-route-Category="" asp-route-Page="@i">*@
                        <a href=@String.Format("{0}{1}","Page", i) class="page-link">
                            <span class="page-link">
                                @i
                            </span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        @*<a asp-controller="Home" asp-action="IndexCat" asp-route-Category="" asp-route-Page="@i" class="page-link">*@
                        <a href=@String.Format("{0}{1}","Page", i) class="page-link">
                            @i
                        </a>
                    </li>
                }
            }

        }
    </ul>
</nav>