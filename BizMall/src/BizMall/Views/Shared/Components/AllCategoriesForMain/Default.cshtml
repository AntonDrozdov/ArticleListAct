<div class="col-md-2">
    <nav id="navbar-sub-header" role="navigation" class="navbar navbar-default" style="margin-top:5px;">
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapseCat" data-toggle="collapse" class="navbar-toggle">
                <span>Категории</span>
            </button>
        </div>
        <div id="navbarCollapseCat" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                @foreach (var topcat in ViewBag.Categories)
                {
                    if (topcat.CategoryId == null)
                    {
                        bool IsParent = false;
                        @foreach (var cat in ViewBag.Categories)
                        {
                            @if (cat.CategoryId == topcat.Id)
                            {
                                IsParent = true;
                                break;
                            }
                        }
                        if (IsParent == true)
                        {
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">@topcat.Title<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="btnGroupVerticalDrop">
                                    @foreach (var chcat in ViewBag.Categories)
                                    {
                                        @if (chcat.CategoryId == topcat.Id)
                                        {
                                            <li><a href="#">@chcat.Title</a></li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                        if (IsParent == false)
                        {
                            <li><a href="#">@topcat.Title</a></li>
                        }
                    }
                }
            </ul>
        </div>
    </nav>
</div>





